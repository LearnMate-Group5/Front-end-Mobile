<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái được chọn - không có background -->
    <item android:state_checked="true" android:drawable="@android:color/transparent"/>
    <!-- Trạng thái được focus - không có background -->
    <item android:state_focused="true" android:drawable="@android:color/transparent"/>
    <!-- Trạng thái được press - không có background -->
    <item android:state_pressed="true" android:drawable="@android:color/transparent"/>
    <!-- Mặc định - không có background -->
    <item android:drawable="@android:color/transparent"/>
</selector>
