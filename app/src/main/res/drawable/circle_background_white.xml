<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Màu nền trắng -->
    <solid android:color="@android:color/white" />

    <!-- Viền nhẹ màu xám (tuỳ chọn) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Bóng nhẹ nếu muốn nổi lên -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
