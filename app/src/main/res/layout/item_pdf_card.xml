<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/ivThumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_picture_as_pdf_24" />

            <!-- Delete button with better visibility -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/circle_background_purple"
                android:src="@android:drawable/ic_menu_delete"
                android:padding="10dp"
                android:tint="@android:color/white"
                android:elevation="8dp"
                android:contentDescription="Delete file" />

            <LinearLayout
                android:id="@+id/overlayActions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#80000000"
                android:padding="20dp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRaw"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Raw"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTranslated"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dá»‹ch" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:text="File name.pdf"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:text="Category"
            android:textSize="12sp"
            android:textColor="@color/purple_primary"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="2dp"
            android:text="10/04/2025"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
