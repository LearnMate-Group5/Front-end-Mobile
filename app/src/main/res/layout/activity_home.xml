<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_surface">

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header với logo centered -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_learnmate"
                    app:tint="@color/purple_primary" />
            </LinearLayout>

            <!-- Greeting Section -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào buổi sáng, Meo"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hãy làm hôm nay thông minh hơn một chút."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:paddingBottom="32dp"/>

            <!-- Featured Books Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách Nổi Bật"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFeaturedBooks"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="24dp"/>

            <!-- Recommended Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đề Xuất Cho Bạn"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:paddingBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommended"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp"/>

            <!-- Favorite Books Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách Yêu Thích"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:paddingBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFavoriteBooks"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp"/>

            <!-- Import Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImport"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                style="@style/Widget.LearnMate.CardView"
                app:cardBackgroundColor="@color/text_primary"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvImportTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhập Sách Ngay Bây Giờ"
                            android:textStyle="bold"
                            android:textColor="@color/surface"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Dịch sẵn sàng trong 30 giây"
                            android:textColor="@color/surface"
                            android:textSize="14sp"
                            android:alpha="0.9"/>
                    </LinearLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:backgroundTint="@color/surface"
                        app:tint="@color/text_primary"
                        app:srcCompat="@android:drawable/ic_media_play"
                        app:elevation="6dp"
                        app:borderWidth="0dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Loading Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicatorSize="48dp"
        app:indicatorColor="@color/purple_primary"/>

    <!-- Bottom Navigation -->
    <com.example.LearnMate.components.BottomNavigationComponent
        android:id="@+id/bottomNavComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
