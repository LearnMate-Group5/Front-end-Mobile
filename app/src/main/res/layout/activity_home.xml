<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_surface">

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header với logo centered -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="32dp">

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_learnmate"
                    app:tint="@color/purple_primary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_primary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Mate"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_primary"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Greeting Section -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning, Meo"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make today a little smarter."
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:paddingBottom="32dp"/>

            <!-- Featured Books Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured Books"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingBottom="16dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Book 1 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        android:layout_height="210dp"
                        android:layout_marginEnd="16dp"
                        style="@style/Widget.LearnMate.CardView"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mock1"
                            android:scaleType="centerCrop"
                            android:contentDescription="Featured Book 1"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Book 2 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        android:layout_height="210dp"
                        android:layout_marginEnd="16dp"
                        style="@style/Widget.LearnMate.CardView"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mock2"
                            android:scaleType="centerCrop"
                            android:contentDescription="Featured Book 2"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Book 3 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        android:layout_height="210dp"
                        android:layout_marginEnd="16dp"
                        style="@style/Widget.LearnMate.CardView"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mock3"
                            android:scaleType="centerCrop"
                            android:contentDescription="Featured Book 3"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Book 4 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        android:layout_height="210dp"
                        android:layout_marginEnd="16dp"
                        style="@style/Widget.LearnMate.CardView"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mock4"
                            android:scaleType="centerCrop"
                            android:contentDescription="Featured Book 4"/>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Import Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImport"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="24dp"
                style="@style/Widget.LearnMate.CardView"
                app:cardBackgroundColor="@color/text_primary"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvImportTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Import Your Book Now"
                            android:textStyle="bold"
                            android:textColor="@color/surface"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Translation ready in 30s"
                            android:textColor="@color/surface"
                            android:textSize="14sp"
                            android:alpha="0.9"/>
                    </LinearLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:backgroundTint="@color/surface"
                        app:tint="@color/text_primary"
                        app:srcCompat="@android:drawable/ic_media_play"
                        app:elevation="6dp"
                        app:borderWidth="0dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Your Imported Books Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Imported Books"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:paddingBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvImportedFiles"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="24dp"/>

            <!-- Recommended Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended for you"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:paddingBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommended"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:nestedScrollingEnabled="false"/>

            <!-- Screenshots Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Screenshots"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="32dp"
                android:paddingBottom="16dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="20dp">

                    <!-- Screenshot 1 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="16dp"
                        style="@style/Widget.LearnMate.CardView"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mock1"
                            android:scaleType="centerCrop" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Screenshot 2 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="16dp"
                        style="@style/Widget.LearnMate.CardView"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mock2"
                            android:scaleType="centerCrop" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Screenshot 3 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="16dp"
                        style="@style/Widget.LearnMate.CardView"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mock3"
                            android:scaleType="centerCrop" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Screenshot 4 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        style="@style/Widget.LearnMate.CardView"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mock4"
                            android:scaleType="centerCrop" />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <!-- Loading Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicatorSize="48dp"
        app:indicatorColor="@color/purple_primary"/>

    <!-- Bottom Navigation -->
    <com.example.LearnMate.components.BottomNavigationComponent
        android:id="@+id/bottomNavComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
