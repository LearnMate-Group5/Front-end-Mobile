<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="start"
            android:background="@drawable/outline_button_background"
            android:src="@drawable/ic_back"
            android:contentDescription="Quay lại"
            android:scaleType="fitCenter"
            android:padding="12dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên Mật Khẩu"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Nhập email của bạn để nhận mã xác thực"
            android:textColor="#A1A4B2"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Địa chỉ email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- Send Email Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:text="GỬI EMAIL"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple"
            app:cornerRadius="8dp"/>

        <!-- Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Chúng tôi sẽ gửi mã xác thực đến email của bạn"
            android:textColor="#A1A4B2"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

    </LinearLayout>
</ScrollView>

