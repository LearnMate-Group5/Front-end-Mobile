<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/purple_surface"
    android:orientation="vertical">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cài Đặt Của Tôi"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:background="@drawable/circle_background_purple"
                    android:padding="8dp"
                    android:contentDescription="Cài đặt" />
            </LinearLayout>

            <!-- Profile Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.LearnMate.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo_learnmate"
                            android:contentDescription="Ảnh đại diện"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircularImageView"
                            app:strokeWidth="0dp" />

                        <ImageView
                            android:id="@+id/btnCamera"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_camera_black_24dp"
                            android:background="@drawable/circle_background_white"
                            android:padding="4dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Phuong Meo"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="maixinkdep@gmail.com"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnShowProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hiển Thị Hồ Sơ"
                            style="@style/Widget.LearnMate.Button"
                            android:textSize="14sp"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="6dp"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Subscription -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSubscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.LearnMate.CardView"
                android:clickable="false"
                android:focusable="false">

                <LinearLayout
                    android:id="@+id/btnSubscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:descendantFocusability="blocksDescendants">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_subscription"
                        android:clickable="false"
                        android:focusable="false"
                        app:tint="@color/purple_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gói Đăng Ký"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:clickable="false"
                        android:focusable="false" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arround_right"
                        android:clickable="false"
                        android:focusable="false"
                        app:tint="@color/purple_primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Current Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCurrentPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.LearnMate.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvCurrentPlanTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gói Hiện Tại"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCurrentPlanBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gói Hiện Tại"
                            android:textColor="@color/purple_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_chip_dark"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvCurrentPlanStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoạt Động"
                            android:textColor="@color/purple_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCurrentPlanName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chưa có gói đăng ký"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvCurrentPlanFeatures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Không có đăng ký hoạt động\n• Chọn gói bên dưới để bắt đầu"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="12dp">

                        <!-- Cancel Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Hủy"
                            android:textSize="14sp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="8dp"
                            android:visibility="gone"
                            app:backgroundTint="@color/error"
                            android:textColor="@color/purple_on_primary" />

                        <!-- Upgrade Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUpgrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nâng Cấp"
                            android:textSize="14sp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="8dp"
                            android:visibility="gone"
                            style="@style/Widget.LearnMate.Button"
                            android:textColor="@color/purple_on_primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Settings -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.LearnMate.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Payment History -->
                    <LinearLayout
                        android:id="@+id/btnPaymentHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_history"
                            app:tint="@color/purple_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lịch Sử Thanh Toán"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arround_right"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>

                    <!-- Logout -->
                    <LinearLayout
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_logout"
                            app:tint="@color/error" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Đăng Xuất"
                            android:textColor="@color/error"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arround_right"
                            app:tint="@color/error" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.example.LearnMate.components.BottomNavigationComponent
        android:id="@+id/bottomNavComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>