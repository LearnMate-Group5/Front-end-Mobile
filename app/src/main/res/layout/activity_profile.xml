<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_surface"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="start"
                android:background="@drawable/circle_background_purple"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:scaleType="fitCenter"
                android:padding="12dp"/>

            <!-- Logo -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_learnmate"
                android:layout_marginBottom="32dp" />

            <!-- Profile Form -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.LearnMate.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Username -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Username"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_background_material"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="************"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:inputType="text" />

                    <!-- Password -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Password"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_background_material"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="****************"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:inputType="textPassword" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Email"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edit_text_background_material"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="*************"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:inputType="textEmailAddress" />

                    <!-- Phone Number -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Phone Number"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/edit_text_background_material"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="+84"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/etPhoneNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_background_material"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="****************"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:inputType="phone" />
                    </LinearLayout>

                    <!-- Birth -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Birth"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etBirth"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/edit_text_background_material"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="****************"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:inputType="date" />

                    <!-- Edit Profile Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        style="@style/Widget.LearnMate.Button"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/purple_on_primary"
                        android:text="Edit Profile"
                        android:textColor="@color/purple_on_primary"
                        android:textSize="16sp" />
                        
                    <!-- Log Out Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        app:backgroundTint="@color/design_default_color_error"
                        android:text="Log Out"
                        android:textColor="@color/purple_on_primary"
                        android:textSize="16sp" />
                        
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.example.LearnMate.components.BottomNavigationComponent
        android:id="@+id/bottomNavComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>