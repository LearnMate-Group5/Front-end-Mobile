<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPlan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    style="@style/Widget.LearnMate.CardView"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Plan Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPlanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Monthly"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvCurrentBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Plan"
                    android:textColor="@color/purple_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_chip_dark"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <!-- Price Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <!-- Original Price (có gạch ngang) -->
                    <TextView
                        android:id="@+id/tvOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200,000 VND"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone" />

                    <!-- Discount (màu đỏ với dấu - và %) -->
                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-10%"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Final Price -->
                <TextView
                    android:id="@+id/tvPlanPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99,000 VND"
                    android:textColor="@color/purple_primary"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvPlanSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full access for 1 month"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Features -->
        <TextView
            android:id="@+id/tvPlanFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Feature 1\n• Feature 2\n• Feature 3"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Subscribe/Upgrade Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubscribe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upgrade"
                style="@style/Widget.LearnMate.Button"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:layout_marginEnd="8dp" />

            <!-- Cancel Button (chỉ hiển thị cho current plan) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="@color/text_primary"
                android:backgroundTint="@android:color/transparent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


