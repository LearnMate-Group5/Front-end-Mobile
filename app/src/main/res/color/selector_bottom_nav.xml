<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- trạng thái được chọn - màu purple chính -->
    <item android:state_checked="true" android:color="@color/purple_primary"/>
    <!-- trạng thái không tương tác (tùy chọn) -->
    <item android:state_enabled="false" android:color="@color/text_disabled"/>
    <!-- mặc định: chưa chọn -->
    <item android:color="@color/text_secondary"/>
</selector>
